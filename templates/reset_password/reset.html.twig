{% extends 'base.html.twig' %}

{% block title %}Nouveau mot de passe{% endblock %}

{% block body %}
    <div class="example-wrapper">

        <h2>Nouveau mot de passe</h2>

        {{ form_start(resetForm, {
            'attr': {
                'aria-label': 'Formulaire de réinitialisation du mot de passe'
            }
        }) }}

        <div class="form-row">
            {{ form_row(resetForm.plainPassword, {
                label: 'Nouveau mot de passe',
                'attr': {
                    'placeholder': 'Entrez votre nouveau mot de passe',
                    'aria-required': 'true',
                    'autocomplete': 'new-password'
                }
            }) }}
            {#
            placeholder : aide visuelle
            aria-required : indique que le champ est obligatoire
            autocomplete="new-password" : améliore la sécurité et empêche le navigateur de remplir un ancien mot de passe
            #}
        </div>

        <button type="submit">Réinitialiser le mot de passe</button>

        {{ form_end(resetForm) }}

    </div>

    <style>

        h2{
            margin: 1em 0;
            padding-bottom: 1em;
        }


        body {

            color: #333;
            margin: 0;
        }

        .footer{
            margin-top: 8em;
        }
        .example-wrapper {
            max-width: 480px;
            margin: 0 auto;
        }


        .form-row {
            margin: 2.5em 0;
        }

        .form-row div{
            padding-bottom: 2em;
        }


        .form-row label {
            display: block;
            margin-bottom: 0.3em;
            font-weight: 500;
            color: #555;

        }

        input[type="text"],
        input[type="email"],
        input[type="password"],
        select {
            width: 100%;
            padding: 0.7em 1em;
            border: 1.2px solid #ccc;
            background: transparent;
            transition: border-color 0.3s ease;
        }


        /* Focus visible pour utilisateurs clavier */
        input:focus-visible,
        select:focus-visible,
        button:focus-visible {
            outline: 2px solid #9aa584;
            outline-offset: 2px;
        }

        button[type="submit"] {
            font-weight: 600;
            padding: 1em;
            margin-bottom: 3em;
            margin-top: 2em;
            width: 100%;
            border: none;
            border-radius: 8px;
        }



        .form-errors {
            color: #d93025;
            font-size: 0.85rem;
            margin-top: 0.3em;
        }

        /* Champ caché */
        input[type="hidden"] {
            display: none;
        }





        @media (max-width: 600px) {


            .example-wrapper {
                padding: 0 1.5em;
            }

            .form-row {
                margin: 2em 0;
            }

            input,
            select {

                padding: 0.8em;
            }

            button[type="submit"] {
                padding: 0.9em;
            }
        }
    </style>


{% endblock %}


