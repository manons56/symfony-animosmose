{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <div class="example-wrapper">
        <h2>Inscription</h2>

        {{ form_start(form, {'attr': {'aria-label': 'Formulaire d’inscription'}}) }}


        <div class="form-row">
            {{ form_row(form.email, {
                label: 'Email',
                attr: {
                    'aria-required': 'true',
                    'placeholder': 'Votre email'
                }
            }) }}
        </div>


        <div class="form-row">
            {{ form_label(form.plainPassword, 'Mot de passe') }}
            {{ form_widget(form.plainPassword, {
                attr: {
                    'aria-required': 'true',
                    'placeholder': 'Votre mot de passe'
                }
            }) }}
            {{ form_errors(form.plainPassword) }}
        </div>
        </br>

        <div class="form-row">
            <div class="form-row">
                {{ form_row(form.name, {label: 'Nom', attr: {'aria-required': 'true', 'placeholder': 'Votre nom'}}) }}
            </div>
            <div class="form-row">
                {{ form_row(form.surname, {label: 'Prénom', attr: {'aria-required': 'true', 'placeholder': 'Votre prénom'}}) }}
            </div>
            <div class="form-row">
                {{ form_row(form.phone, {label: 'Numéro de téléphone', attr: {'placeholder': 'Ex: 06 12 34 56 78'}}) }}
            </div>

            <div class="form-row">
                {{ form_row(form.address.street, {label: 'Adresse', attr: {'placeholder': 'Rue / numéro'}}) }}
            </div>
        </div>
            <div class="form-row">
                {{ form_row(form.address.zipcode, {label: 'Code postal', attr: {'placeholder': 'Ex: 56000'}}) }}
            </div>
            <div class="form-row">
                {{ form_row(form.address.city, {label: 'Ville', attr: {'placeholder': 'Ex: Vannes'}}) }}
            </div>
            <div class="form-row">
                {{ form_row(form.address.countryLabel, {label: 'Pays'}) }}
            </div>
        <div class="form-row">
            {{ form_row(form.address.country) }} {# champ caché #}
        </div>
        <div class="form-row">
            {{ form_row(form.certification) }}
        </div>

        <button type="submit">S'inscrire</button>

        {{ form_end(form) }}
    </div>




<style>

    h2{
        margin: 1em 0;
    }


    body {

        color: #333;
        margin: 0;
    }

    .example-wrapper {
        max-width: 480px;
        margin: 0 auto;
    }


    .form-row {
        margin: 2.5em 0;
    }

    .form-row label {
        display: block;
        margin-bottom: 0.3em;
        font-weight: 500;
        color: #555;

    }

    input[type="text"],
    input[type="email"],
    input[type="password"],
    select {
        width: 100%;
        padding: 0.7em 1em;
        border: 1.2px solid #ccc;
        background: transparent;
        transition: border-color 0.3s ease;
    }


    /* Focus visible pour clavier */
    input:focus-visible,
    select:focus-visible,
    button:focus-visible {
        outline: 2px solid #9aa584;
        outline-offset: 2px;
    }



    button[type="submit"] {
        font-weight: 600;
        padding: 0.85em;
        width: 100%;
        border: none;
        border-radius: 8px;
    }



    .form-errors {
        color: #d93025;
        font-size: 0.85rem;
        margin-top: 0.3em;
    }

    /* Champ caché */
    input[type="hidden"] {
        display: none;
    }


    @media (max-width: 600px) {


        .example-wrapper {
            padding: 0 1.5em;
        }

        .form-row {
            margin: 2em 0;
        }

        input,
        select {

            padding: 0.8em;
        }

        button[type="submit"] {
            padding: 0.9em;
        }
    }
</style>


{% endblock %}
