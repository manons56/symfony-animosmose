{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Inscription</h1>

    {{ form_start(form) }}
    {{ form_row(form.name, {label: 'Nom'}) }}
    {{ form_row(form.surname, {label: 'Prénom'}) }}
    {{ form_row(form.phone, {label: 'Numéro de téléphone'}) }}
    {{ form_row(form.email, {label: 'Email'}) }}
    {{ form_row(form.plainPassword, {label: 'Mot de passe'}) }}
    {{ form_row(form.address.street, {label: 'Adresse'}) }}
    {{ form_row(form.address.zipcode, {label: 'Code postal'}) }}
    {{ form_row(form.address.city, {label: 'Ville'}) }}
    {{ form_row(form.address.countryLabel, {label: 'Pays'}) }}
    {{ form_row(form.address.country) }} {# champ caché #}
    {{ form_row(form.certification) }}
    <button type="submit">Envoyer</button>
    {{ form_end(form) }}

</div>
{% endblock %}
