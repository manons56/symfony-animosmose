{% extends 'base.html.twig' %}

{% block title %}Hello ProductController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>{{ product.name }}</h1>
    <img src="{{ asset(product.imgId.url) }}" alt="{{ product.name }}"/>
    <h3>Description</h3>
    <p>{{ product.description }}</p>
    <h3>Composition</h3>
    <p>{{ product.composition }}</p>
    <h3>Composants analytiques</h3>
    <p>{{ product.analyticsComponents }}</p>
    <h3>Additifs</h3>
    <p>{{ product.nutritionnalAdditive }}</p>




    <h2>Contenance :</h2>
    <ul>
        {% for variant in variants %}
            <li>
                {{ variant.label }} - {{ variant.price }} â‚¬
                <a href="{{ path('app_shop_cart_add', {id: variant.id}) }}"> Ajouter au panier</a>
            </li>
        {% endfor %}
    </ul>

    <a href="{{ path('app_shop_cart') }}">Voir mon panier</a>
</div>
{% endblock %}
