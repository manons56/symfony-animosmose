{% extends 'base.html.twig' %}
{% set current_page = 'cart' %}

{% block title %}Mon panier{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('product') }}
{% endblock %}
{% block body %}


<div>
    <div class="icones-user-shop">
        <a href="{{ path('app_shop_cart') }}">
            <i class="fa-solid fa-bag-shopping fa-2xl" style="color: #a0ab81;"></i>
        </a>

        <div class="user-menu-wrapper">
            {% if app.user %}
                <button id="user-menu-toggle" class="user-icon-button">
                    <i class="fa-solid fa-user fa-2xl" style="color: #a0ab81;"></i>
                </button>
                <div id="user-menu" class="user-dropdown">
                    <form method="post" action="{{ path('app_logout') }}">
                        <button type="submit" class="user-menu-link">Se déconnecter</button>
                    </form>
                </div>
            {% else %}
                <a href="{{ path('app_login') }}">
                    <i class="fa-solid fa-user fa-2xl" style="color: #a0ab81;"></i>
                </a>
            {% endif %}
        </div>
    </div>
    <a href="{{ path('app_product_list') }}">
        <img src="{{ asset('build/images/back_arrow.png') }}" alt="Flèche retour" class="back_arrow">
    </a>


        <h1>Votre panier</h1>

    <table class="table-cart">
        <thead>
        <tr>
            <th>Produit</th>
            <th>Détail</th>
            <th>Quantité</th>
            <th>Prix</th>
            <th>Total</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for item in items %}
            <tr>
                <td>{{ item.variant.product.name }}</td>

                {# GESTION DE L'AFFICHAGE DES ATTRIBUTS (contenance / taille / couleur) #}
                <td>
                    {% if item.variant.contenance %}
                        {{ item.variant.contenance }}
                    {% else %}
                        {% if item.variant.size %}
                            Taille : {{ item.variant.size }}
                        {% endif %}
                        {% if item.variant.color %}
                            <br>Couleur : {{ item.variant.color }}
                        {% endif %}
                    {% endif %}
                </td>

                <td>{{ item.quantity }}</td>
                <td>{{ item.variant.price }} €</td>
                <td>{{ item.total }} €</td>
                <td>
                    <form method="post" action="{{ path('app_shop_cart_remove', {id: item.variant.id}) }}" onsubmit="return confirm('Supprimer cet article ?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('cart_remove_' ~ item.variant.id) }}">
                        <button type="submit" class="btn btn-danger btn-sm">Supprimer</button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr><td colspan="6">Votre panier est vide.</td></tr>
        {% endfor %}
        </tbody>

    </table>

    <div class="cart-mobile">
        {% for item in items %}
            <div class="cart-item d-flex">
                <div class="cart-item-content">
                    <div class="cart-item-header font-weight-bold">
                        {{ item.variant.product.name }}
                    </div>

                    <div>
                        {% if item.variant.contenance %}
                            Contenance : {{ item.variant.contenance }}
                        {% else %}
                            {% if item.variant.size %}
                                Taille : {{ item.variant.size }}
                            {% endif %}
                            {% if item.variant.color %}
                                <br>Couleur : {{ item.variant.color }}
                            {% endif %}
                        {% endif %}
                    </div>

                    <div>Quantité : {{ item.quantity }}</div>
                    <div>Prix unitaire : {{ item.variant.price }} €</div>
                    <div>Total : {{ item.total }} €</div>

                    <form method="post" action="{{ path('app_shop_cart_remove', {id: item.variant.id}) }}" onsubmit="return confirm('Supprimer cet article ?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('cart_remove_' ~ item.variant.id) }}">
                        <button type="submit" class="btn btn-danger btn-sm">Supprimer</button>
                    </form>
                </div>

                <div class="cart-item-image-wrapper">
                    {% set firstImage = item.variant.product.images|first %}
                    <img src="{{ firstImage ? asset('img/products/' ~ firstImage.filename) : asset('img/default-product.png') }}"
                         alt="{{ item.variant.product.name }}"
                         class="cart-item-image">
                </div>
            </div>
        {% else %}
            <p>Votre panier est vide.</p>
        {% endfor %}
    </div>




    <h2>Total : {{ total }} €</h2>
    <div class="cart-button">
        <a href="{{ path('app_product_list') }}"><button type="button"> Continuer mes achats</button></a>
        <form method="post" action="{{ path('app_shop_cart_checkout') }}">
            <input type="hidden" name="_token" value="{{ csrf_token('checkout') }}">
            <button type="submit">Passer commande</button>
        </form>
    </div>
</div>




{% endblock %}
