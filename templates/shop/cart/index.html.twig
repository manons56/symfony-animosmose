{% extends 'base.html.twig' %}

{% block title %}Hello CartController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Votre panier</h1>

    <table>
        <thead>
        <tr>
            <th>Contenance</th>
            <th>Prix</th>
            <th>Quantité</th>
            <th>Total</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for item in items %}
            <tr>
                <td>{{ item.variant.label }}</td>
                <td>{{ item.variant.price }} €</td>
                <td>{{ item.quantity }}</td>
                <td>{{ item.total }} €</td>
                <td><a href="{{ path('app_shop_cart_remove', {id: item.variant.id}) }}">❌</a></td>
            </tr>
        {% else %}
            <tr><td colspan="5">Votre panier est vide.</td></tr>
        {% endfor %}
        </tbody>
    </table>

    <h2>Total : {{ total }} €</h2>

    <a href="{{ path('app_product_list') }}">Continuer mes achats</a>
    <a href="{{ path('app_login') }}">Passer commande</a>
</div>
{% endblock %}
