<div id="shop-popup" class="shop-popup">
    <button id="close-popup" class="close-popup">&times;</button>
    <h4>Vous avez une question ? </h4>

    {{ form_start(form, {'attr': {'id': 'contact-form'}}) }}
    <div class="form-group">
        {{ form_label(form.name) }}
        {{ form_widget(form.name) }}
        {{ form_errors(form.name) }}
    </div>
    <div class="form-group">
        {{ form_label(form.phone) }}
        {{ form_widget(form.phone) }}
        {{ form_errors(form.phone) }}
    </div>
    <div class="form-group">
        {{ form_label(form.email) }}
        {{ form_widget(form.email) }}
        {{ form_errors(form.email) }}
    </div>
    <div class="form-group">
        {{ form_label(form.message) }}
        {{ form_widget(form.message, {'attr': {'rows': 3}}) }}
        {{ form_errors(form.message) }}
    </div>
    <button type="submit">Envoyer</button>
    {{ form_end(form) }}
</div>

<style>
    .shop-popup {
        position: fixed;
        bottom: 20px;
        right: 20px;
        width: 300px;
        background: white;
        border: 1px solid #ccc;
        border-radius: 8px;
        padding: 15px;
        box-shadow: 0 0 10px rgba(0,0,0,0.2);
        display: none; /* caché au départ */
        z-index: 1000;
    }

    .shop-popup h4 {
        margin-top: 0;
    }

    .shop-popup .close-popup {
        position: absolute;
        top: 5px;
        right: 5px;
        border: none;
        background: #fcfcfc;
        font-size: 18px;
        cursor: pointer;
        padding: 0.5em;
        color: black;
    }

    .shop-popup .form-group {
        margin-bottom: 10px;
    }

    .shop-popup .form-group input,
    .shop-popup .form-group textarea {
        width: 100%;
        padding: 5px;
        box-sizing: border-box;
    }
</style>
