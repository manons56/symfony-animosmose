{% extends 'base.html.twig' %}
{% set current_page = 'order' %}

{% block title %}Mes commandes{% endblock %}

{% block body %}

    <a href="{{ path('app_shop_cart') }}" class="btn btn-secondary">← Retour au panier</a>

    <div class="icones-user-shop">
        <a href="{{ path('app_shop_cart') }}">
            <i class="fa-solid fa-bag-shopping fa-2xl" style="color: #a0ab81;"></i>
        </a>

        <div class="user-menu-wrapper">
            {% if app.user %}
                <button id="user-menu-toggle" class="user-icon-button">
                    <i class="fa-solid fa-user fa-2xl" style="color: #a0ab81;"></i>
                </button>
                <div id="user-menu" class="user-dropdown">
                    <form method="post" action="{{ path('app_logout') }}">
                        <button type="submit" class="user-menu-link">Se déconnecter</button>
                    </form>
                </div>
            {% else %}
                <a href="{{ path('app_login') }}">
                    <i class="fa-solid fa-user fa-2xl" style="color: #a0ab81;"></i>
                </a>
            {% endif %}
        </div>
    </div>

    <h1>Mes commandes</h1>

    <table>
        <thead>
        <tr>
            <th>ID</th>
            <th>Date</th>
            <th>Total</th>
            <th>Actions</th> {# Regroupe "Voir" et "Supprimer" #}
        </tr>
        </thead>
        <tbody>
        {% for order in orders %}
            <tr>
                <td>{{ order.id }}</td>
                <td>{{ order.date|date('d/m/Y H:i') }}</td>
                <td>{{ order.total }} €</td>
                <td>
                    <a href="{{ path('app_shop_order_show', {id: order.id}) }}">Voir</a>

                    {% if order.status == constant('App\\Enum\\OrderStatus::Pending') %}
                        <form method="post"
                              action="{{ path('app_shop_order_delete', {'id': order.id}) }}"
                              style="display:inline;"
                              onsubmit="return confirm('Supprimer cette commande ?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete_order_' ~ order.id) }}">
                            <button type="submit">Supprimer</button>
                        </form>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucune commande trouvée.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
