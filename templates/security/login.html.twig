{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="example-wrapper">

        {% if app.user %}
            <div>
                Vous êtes connecté en tant que {{ app.user.userIdentifier }},
                <a href="{{ path('app_logout') }}">Se déconnecter</a>
            </div>
        {% endif %}

        <h2>Connexion</h2>

        <form method="post" action="{{ path('app_login') }}" aria-label="Formulaire de connexion">

            <div class="form-row">
                <label for="username">Email</label>
                <input type="email" value="{{ last_username }}"
                       name="email" id="username"
                       autocomplete="email" required autofocus
                       aria-required="true"
                       placeholder="Votre email">
            </div>

            <div class="form-row">
                <label for="password">Mot de passe</label>
                <input type="password" name="password" id="password"
                       autocomplete="current-password" required
                       aria-required="true"
                       placeholder="Votre mot de passe">
                <p>
                    Mot de passe oublié ?
                    <a href="{{ path('app_forgot_password_request') }}">Cliquez ici</a> pour le réinitialiser.
                </p>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">


            {% if error %}
                <div class="form-errors" role="alert" aria-live="assertive">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
                {# role="alert" et aria-live : notification immédiate aux lecteurs d’écran #}
            {% endif %}

            <div class="form-row">
                <label>
                    <input type="checkbox" name="_remember_me">
                     Se souvenir de moi
                </label>
            </div>

            <button type="submit">Se connecter</button>


            <p>
                Vous n'avez pas encore de compte ?
                <a href="{{ path('app_user_user_new') }}">Cliquez ici</a> pour vous inscrire.
            </p>

        </form>
    </div>

    <style>

        h2{
            margin: 1em 0;
        }


        body {

            color: #333;
            margin: 0;
        }

        .footer{
            margin-top: 8em;
        }
        .example-wrapper {
            max-width: 480px;
            margin: 0 auto;
        }


        .form-row {
            margin: 2.5em 0;
        }

        .form-row p{
            font-size: smaller;
            font-style: italic;
        }

        .form-row p a{
              color:black;
          }

        p{
            font-size: smaller;
        }


        .form-row label {
            display: block;
            margin-bottom: 0.3em;
            font-weight: 500;
            color: #555;

        }

        input[type="text"],
        input[type="email"],
        input[type="password"],
        select {
            width: 100%;
            padding: 0.7em 1em;
            border: 1.2px solid #ccc;
            background: transparent;
            transition: border-color 0.3s ease;
        }


        /* Focus visible pour clavier */
        input:focus-visible,
        select:focus-visible,
        button:focus-visible {
            outline: 2px solid #9aa584;
            outline-offset: 2px;
        }


        button[type="submit"] {
            font-weight: 600;
            padding: 1em;
            margin-bottom: 3em;
            width: 100%;
            border: none;
            border-radius: 8px;
        }



        .form-errors {
            color: #d93025;
            font-size: 0.85rem;
            margin-top: 0.3em;
        }

        /* Champ caché */
        input[type="hidden"] {
            display: none;
        }



        @media (max-width: 600px) {


            .example-wrapper {
                padding: 0 1.5em;
            }

            .form-row {
                margin: 2em 0;
            }

            input,
            select {

                padding: 0.8em;
            }

            button[type="submit"] {
                padding: 0.9em;
            }
        }
    </style>


{% endblock %}
